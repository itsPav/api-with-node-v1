ul.app--user--list
    each val, index in following
        li 
            .circle--fluid
                .circle--fluid--cell.circle--fluid--primary
                    a.app--tweet--author
                        .app--avatar
                            img(src=`${val.profile_image_url}`)
                        h4= `${val.name}`
                        p= `@${val.screen_name}`
                .circle--fluid--cell
                    if val.following
                        a.button.button-text Unfollow
                    else
                        a.button Follow